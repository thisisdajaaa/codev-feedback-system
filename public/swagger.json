{
  "openapi": "3.0.2",
  "info": {
    "version": "1.0.0",
    "title": "Codev Feedback Systems API",
    "description": "This API is designed to facilitate feedback and communication in the Codev ecosystem."
  },
  "servers": [
    {
      "url": "http://{HOSTNAME}:{PORT}/",
      "description": "Local Environment Base URL.",
      "variables": {
        "HOSTNAME": {
          "default": "localhost"
        },
        "PORT": {
          "default": "3000"
        }
      }
    },
    {
      "url": "https://development****.com/",
      "description": "Development Environment Base URL."
    },
    {
      "url": "https://test***.com/",
      "description": "Test Environment Base URL."
    }
  ],
  "tags": [
    {
      "name": "auth",
      "description": "Authentication operations"
    },
    {
      "name": "users",
      "description": "User operations"
    },
    {
      "name": "questionnaire",
      "description": "Questionnaire operations"
    },
    {
      "name": "survery",
      "description": "Survey operations"
    }
  ],
  "paths": {
    "/api/auth/accept-user-invitation": {
      "post": {
        "tags": ["auth"],
        "summary": "Accept user invitation",
        "operationId": "acceptUserInvitation",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "string"
                  }
                },
                "required": ["userId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/api/auth/send-surveyor-invitation": {
      "post": {
        "tags": ["auth"],
        "summary": "Send surveyor invitation",
        "operationId": "sendSurveyorInvitation",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "surveyorDetails": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string"
                        },
                        "department": {
                          "type": "string"
                        }
                      },
                      "required": ["email", "department"]
                    }
                  }
                },
                "required": ["surveyorDetails"]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "400": {
            "description": "Invalid input"
          },
          "409": {
            "description": "Conflict - All of the emails already exist"
          }
        }
      }
    },
    "/api/questionnaire": {
      "get": {
        "tags": ["questionnaire"],
        "summary": "Get All Questionnaires",
        "operationId": "getQuestionnaires",
        "parameters": [
          {
            "name": "select",
            "in": "query",
            "description": "Fields to include in the response. For example: title, department",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Fields to sort by. For example: -createdAt,email",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number for paginated results",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of results per page",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/responseBodies/Questionnaire"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["questionnaire"],
        "summary": "Create questionnaire",
        "operationId": "createQuestionnaire",
        "requestBody": {
          "$ref": "#/components/requestBodies/createQuestionnaireBody"
        },
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "tags": ["users"],
        "summary": "Get all users",
        "operationId": "getUsers",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "description": "Email of the user to filter by. For example: email=test@codev.com",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "role",
            "in": "query",
            "description": "Role of the user to filter by. For example: role=ADMIN",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "select",
            "in": "query",
            "description": "Fields to include in the response. For example: email,role",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Fields to sort by. For example: -createdAt,email",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number for paginated results",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of results per page",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/survey": {
      "get": {
        "tags": ["survey"],
        "summary": "Get all survey",
        "operationId": "getSurveys",
        "parameters": [
          {
            "name": "coverageId",
            "in": "query",
            "description": "ID of the SurveyCoverage item",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "question",
            "in": "query",
            "description": "The question or part of it that you want to query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "object": {
                    "$ref": "#/components/responseBodies/Survey"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["survey"],
        "summary": "Create survey",
        "operationId": "createSurvey",
        "requestBody": {
          "$ref": "#/components/requestBodies/createSurveyBody"
        },
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    }
  },
  "components": {
    "responseBodies": {
      "Questionnaire": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "department": {
            "type": "string",
            "enum": ["IT", "HR", "FINANCE", "RECRUITMENT", "OPERATIONS"]
          },
          "questions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Question"
            }
          },
          "createdBy": {
            "$ref": "#/components/schemas/User"
          },
          "updatedBy": {
            "$ref": "#/components/schemas/User"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          },
          "surveyCoverage": {
            "$ref": "#/components/schemas/SurveyCoverage"
          }
        }
      },
      "Survey": {
        "type": "object",
        "properties": {
          "coverageID": {
            "type": "string"
          },
          "answeredBy": {
            "type": "string"
          }
        }
      }
    },
    "requestBodies": {
      "sendSurveyorInvitationBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "surveyorDetails": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "email": {
                        "type": "string"
                      },
                      "department": {
                        "type": "string"
                      }
                    },
                    "required": ["email", "department"]
                  }
                }
              },
              "required": ["surveyorDetails"]
            }
          }
        }
      },
      "createQuestionnaireBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "coverage": {
                  "$ref": "#/components/schemas/SurveyCoverage"
                },
                "template": {
                  "$ref": "#/components/schemas/Template"
                }
              },
              "required": ["coverage", "template"]
            }
          }
        },
        "required": true
      },
      "createSurveyBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "coverageId": {
                  "type": "string"
                },
                "questionId": {
                  "type": "string"
                },
                "answer": {
                  "type": "string"
                }
              },
              "required": ["coverageId", "questionId", "answer"]
            }
          }
        },
        "required": true
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "isVerified": {
            "type": "boolean"
          },
          "department": {
            "type": "string"
          },
          "role": {
            "type": "string"
          }
        }
      },
      "SurveyCoverage": {
        "type": "object",
        "properties": {
          "dateFrom": {
            "type": "string"
          },
          "dateTo": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        }
      },
      "Question": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "oneOf": [
              "Rating",
              "Satisfaction-Scale",
              "Likelihood-Scale",
              "Concern-Scale",
              "Agreement-Scale",
              "Frequency-Scale",
              "Awareness-Scale",
              "Familiarity-Scale",
              "Quality-Scale",
              "Importance-Scale",
              "Age-Range",
              "Custom-Single",
              "Custom-Multiple",
              "Text-Input",
              "Text-Area"
            ]
          },
          "options": {
            "type": "string"
          },
          "isRequired": {
            "type": "boolean"
          }
        }
      },
      "Template": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "department": {
            "type": "string",
            "enum": ["IT", "HR", "FINANCE", "RECRUITMENT", "OPERATIONS"]
          },
          "questions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Question"
            }
          }
        }
      },
      "SurveyAnswer": {
        "type": "object",
        "properties": {
          "questionId": {
            "type": "string"
          },
          "answer": {
            "type": "string"
          }
        }
      },
      "Survey": {
        "type": "object",
        "properties": {
          "coverageID": {
            "type": "string"
          },
          "answeredBy": {
            "type": "string"
          },
          "suerveyAnswers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SurveyAnswer"
            }
          },
          "dateSubmitted": {
            "type": "date"
          },
          "isAnonymous": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
